			$a = $opago -$pagado;
			
			$presupuesto = (($asignacion+$aumento-$disminucion)+($traslados));
			$disp    =$presupuesto-$comprometido;

			$monto2 =doubleval($monto);
			$opago2 =doubleval($opago);
			$pagado2=doubleval($pagado);
			
			$a=($opago2-$pagado2);
			
			echo "</br>".$monto2.numletra($monto2);		
			
			echo "</br>".$a.numletra($a);			
			
